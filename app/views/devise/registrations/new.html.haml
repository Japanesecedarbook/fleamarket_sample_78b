%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例) 聖徳たいし"
  .field
    = f.label :email
    %br/
    = f.text_field :email, autocomplete: "email", placeholder: "例) sample@sample.com"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autocomplete: "first_name", placeholder: "例) 田中"
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, autocomplete: "last_name", placeholder: "例) 太郎"
  .field
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例) タナカ"
  .field
    = f.label :last_name_kana
    %br/
    = f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "例) タロウ"
  .field
    = f.label :birthday_year
    %br/
    = f.number_field :birthday_year, min: 1, max: 9999, utocomplete: "birthday_year", placeholder: "年"
  .field
    = f.label :birthday_month
    %br/
    = f.number_field :birthday_month, min: 1, max: 12, autocomplete: "birthday_month", placeholder: "月"
  .field
    = f.label :birthday_day
    %br/
    = f.number_field :birthday_day, min: 1, max: 31, autocomplete: "birthday_day", placeholder: "日"
  .field
    = f.label :tel
    %br/
    = f.text_field :tel,autocomplete: "tel", placeholder: "-(ハイホン)不要"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"

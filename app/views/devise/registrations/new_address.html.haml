.new-addresses
  = form_for @address do |f|
    = render "devise/shared/error_messages", resource: @address
    .icon
      = image_tag 'logo.png', alt: '写真', height: '90px', width: '200px', class: 'icon'
    .new-addresses__wrapper
      .name2
        送り先情報入力
      .new-addresses__wrapper__user-name
        .name
          お名前（全角）
          .name__required
            必須
        .name-box
          .name-box__last-name
            = f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "例) 田中", class: "name-box__last-name_box"
          .name-box__first-name
            = f.text_field :first_name, autocomplete: "first_name", placeholder: "例) 太郎", class: "name-box__first-name_box"
      .new-addresses__wrapper__user-name__kana
        .name
          お名前（カナ）
          .name__required
            必須
        .name-box
          .name-box__last-name
            = f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "例) タナカ", class: "name-box__last-name_box"
          .name-box__first-name
            = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例) タロウ", class: "name-box__first-name_box"
      .new-addresses__wrapper__post-code
        .name
          郵便番号
          .name__required
            必須
      = f.text_field :post_code, autocomplete: "post_code", placeholder: "例) 3245566", class: "new-addresses__wrapper__box"
      .new-addresses__wrapper__refecture
        .name
          都道府県
          .name__required
            必須
      = f.select :prefecture, Address.prefectures.keys, autocomplete: "prefecture", placeholder: "例) 東京都"
      .new-addresses__wrapper__city
        .name
          市区町村
          .name__required
            必須
      = f.text_field :city, autocomplete: "city", placeholder: "例) 足立区青井", class: "new-addresses__wrapper__box"
      .new-addresses__wrapper__house-number
        .name
          番地
          .name__required
            必須
      = f.text_field :house_number, autocomplete: "house_number", placeholder: "例) 1-16", class: "new-addresses__wrapper__box"
      .new-addresses__wrapper__building-name
        .name
          番地以下
          .name__required
            任意
      = f.text_field :building_name, autocomplete: "building_name", placeholder: "例) オフィスマンション201", class: "new-addresses__wrapper__box"
      .sign-in__button
        = f.submit '登録する',class:"btn--blue"
.sign-in
  = form_with(model: @products, local: true) do |f|
    .icon
      = image_tag 'logo.png', alt: '写真', height: '90px', width: '200px', class: 'icon'
    .sign-in__wrapper
      .message-text
        アカウントをお持ちでない方はこちら
      .register-button
        =f.submit "新規会員登録",class:"btn--red"
        .register-boder
      .email-box
        = f.email_field :email,class:"email-btn",placeholder:"email"  
      .password-box
        = f.password_field :password, class:"password-btn",placeholder:"password"
      .sign-in__button
        =f.submit "登録する",class:"btn--blue"